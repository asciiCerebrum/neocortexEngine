    <bean id="martialWeaponProficiencyType" class="org.asciicerebrum.mydndgame.domain.ruleentities.FeatType">
        <property name="uniqueId">
            <bean class="org.asciicerebrum.mydndgame.domain.core.particles.UniqueId">

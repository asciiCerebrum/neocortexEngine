<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="fighter1" class="org.asciicerebrum.mydndgame.ClassLevel">
        <property name="level" value="1" />
        <property name="nextClassLevel" ref="fighter2" />
        <property name="baseAtkBoni">
            <list>
                <bean class="org.asciicerebrum.mydndgame.Bonus">
                    <property name="bonusType" ref="baseAttackBonus" />
                    <property name="target" ref="attack" />
                    <property name="value" value="1" />
                    <property name="rank" value="0" />
                </bean>
            </list>
        </property>
    </bean>
    <bean id="fighter2" class="org.asciicerebrum.mydndgame.ClassLevel">
        <property name="level" value="2" />
        <property name="previousClassLevel" ref="fighter1" />
        <property name="baseAtkBoni">
            <list>
                <bean class="org.asciicerebrum.mydndgame.Bonus">
                    <property name="bonusType" ref="baseAttackBonus" />
                    <property name="target" ref="attack" />
                    <property name="value" value="2" />
                    <property name="rank" value="0" />
                </bean>
            </list>
        </property>
    </bean>
    
    <bean id="fighter" class="org.asciicerebrum.mydndgame.CharacterClass">
        <property name="id" value="fighter" />
        <property name="hitDice" ref="d10" />
        <property name="classFeats">
            <list>
                <ref bean="simpleWeaponProficiency" />
                <ref bean="martialWeaponProficiency" />
                <ref bean="lightArmorProficiency" />
                <ref bean="mediumArmorProficiency" />
                <ref bean="heavyArmorProficiency" />
                <ref bean="lightShieldProficiency" />
                <ref bean="heavyShieldProficiency" />
                <ref bean="towerShieldProficiency" />
            </list>
        </property>
        <property name="classLevels">
            <list>
                <ref bean="fighter1" />
                <ref bean="fighter2" />
            </list>
        </property>
    </bean>
    
    <bean id="druid" class="org.asciicerebrum.mydndgame.CharacterClass">
        <property name="id" value="druid" />
        <property name="hitDice" ref="d8" />
        <property name="classFeats">
            <list>
                <ref bean="simpleWeaponProficiencyClub" />
                <ref bean="simpleWeaponProficiencyDagger" />
                <ref bean="simpleWeaponProficiencyDart" />
                <ref bean="simpleWeaponProficiencyQuarterstaff" />
                <ref bean="lightArmorProficiency" />
                <ref bean="mediumArmorProficiency" />
                <ref bean="lightShieldProficiency" />
                <ref bean="heavyShieldProficiency" />
            </list>
        </property>
    </bean>
    
</beans>

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <bean id="inventoryItemServiceFacade" class="org.asciicerebrum.mydndgame.facades.game.DefaultInventoryItemServiceFacade" abstract="true">
        <property name="observableService" ref="observableService" />
        <property name="situationContextService" ref="situationContextService" />
    </bean>
    
    <bean id="weaponServiceFacade" class="org.asciicerebrum.mydndgame.facades.game.DefaultWeaponServiceFacade" parent="inventoryItemServiceFacade">
    </bean>
                
    <bean id="armorServiceFacade" class="org.asciicerebrum.mydndgame.facades.game.DefaultArmorServiceFacade" parent="inventoryItemServiceFacade">
    </bean>
    
    <bean id="characterServiceFacade" class="org.asciicerebrum.mydndgame.facades.game.DefaultCharacterServiceFacade">
        <property name="observableService" ref="observableService" />
        <property name="entityPoolService" ref="entityPoolService" />
    </bean>
    
</beans>